.info-page:
	background-color : $PRIMARY_COLOR
	color            : white

	> .wrapper:
		border      : 1px solid black
		text-align  : center
		> .title:
			margin-top  : $PADDING*2
			font-size   : 4em
			font-weight : bold
		> .headline :
			font-size   : 2em

		> .actions:
			position   : absolute
			bottom     : $PADDING*2
			left       : 0
			right      : 0
			text-align : center

